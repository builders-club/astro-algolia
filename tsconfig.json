{
  "compilerOptions": {
    "allowJs": true,
    "module": "ES2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}